{
  "name": "ultimate-expo-boilerplate",
  "version": "0.0.1",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky install",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "storybook": "sb-rn-get-stories && STORYBOOK_ENABLED='true' expo start",
    "storybook-generate": "sb-rn-get-stories",
    "storybook-watch": "sb-rn-watcher"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail --passWithNoTests  "
    ]
  },
  "dependencies": {
    "expo": "~48.0.6",
    "expo-constants": "^14.2.1",
    "expo-linking": "~4.0.1",
    "expo-router": "^1.2.2",
    "expo-status-bar": "~1.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.71.8",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "~3.20.0",
    "react-native-web": "~0.18.10",
    "styled-components": "^5.3.9"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-typescript": "^7.21.0",
    "@react-native-async-storage/async-storage": "1.17.11",
    "@react-native-community/datetimepicker": "6.7.3",
    "@react-native-community/slider": "^4.4.2",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-controls": "^6.5.16",
    "@storybook/addon-ondevice-actions": "^6.5.2",
    "@storybook/addon-ondevice-controls": "^6.5.2",
    "@storybook/react-native": "^6.5.2",
    "@testing-library/react-native": "^12.3.0",
    "@types/jest": "^29.5.0",
    "@types/react": "~18.0.14",
    "@types/styled-components-react-native": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "babel-loader": "^8.3.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-expo": "^48.0.2",
    "lint-staged": "^13.2.0",
    "plop": "^3.1.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.4"
  },
  "resolutions": {
    "metro": "0.73.7",
    "metro-resolver": "0.73.7"
  }
}
